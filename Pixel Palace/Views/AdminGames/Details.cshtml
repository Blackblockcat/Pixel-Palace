@model Pixel_Palace.Models.Games
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Games</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Os_mode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Os_mode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total_rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total_rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Average_rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Average_rating)
        </dd>
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            @{
                var base64 = Convert.ToBase64String(Model.Game_Images);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
            }
            <img src="@imgsrc" style="max-width: 100%; max-height: 170px" alt="" style="border-radius: 23px;">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Type)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
